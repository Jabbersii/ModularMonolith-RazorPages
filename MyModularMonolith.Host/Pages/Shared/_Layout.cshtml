@inject IOptions<TabOptions> tabOptions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyModularMonolith.Host</title>
    <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <a asp-area="" asp-page="Index">Home</a>
            @foreach (var tab in tabOptions.Value.Tabs)
            {
                <a asp-area="@tab.Area" asp-page="Index">@tab.Name</a>
            }
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        &copy; 2021 - MyModularMonolith.Host - <a>Privacy</a>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
